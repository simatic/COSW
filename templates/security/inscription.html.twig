{% extends 'base.html.twig' %}

{% block title %}
			{% if editMode %}
			Modification d'un utilisateur
			{%  else %}
			Inscription!
			{%  endif %}
{% endblock %}

{% block body %}
<h1>			{% if editMode %}
			Modification d'un utilisateur
			{%  else %}
			Inscription!
			{%  endif %}</h1>
{{ form_start(form) }}
		{{ form_row(form.username,{'attr' : {'placeholder': 'Nom de l\'utilisateur'}}) }}
		{{ form_row(form.email,{'attr' : {'placeholder': 'Email de l\'utilisateur'}}) }}
		{{ form_row(form.password,{'attr' : {'placeholder': 'Mot de passe de l\'utilisateur'}}) }}

		<button type="submit" class="btn btn-success">
			{% if editMode %}
			Modifier
			{%  else %}
			S'inscrire
			{%  endif %}
		</button>
{{ form_end(form) }}
{% endblock %}
